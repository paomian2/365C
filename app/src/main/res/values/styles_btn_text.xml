<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--首页四个icon-->
    <style name="txt_home_activity">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_common_size_small</item>
        <item name="android:drawablePadding">20px</item>
    </style>

    <!--忘记密码字体样式-->
    <style name="forget_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#0196ff</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--登录注册中按钮样式-->
    <style name="btn_login_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/btn_background_ddd</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--商家入驻字体样式-->
    <style name="merchants_settled_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">28px</item>
        <item name="android:layout_marginRight">28px</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/corlor_666</item>
    </style>

    <!--新建地址样式-->
    <style name="layout_88px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:paddingLeft">32px</item>
        <item name="android:paddingRight">32px</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--筛选中标题样式-->
    <style name="text_screen_goods_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">35px</item>
    </style>

    <style name="text_screen_goods">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
