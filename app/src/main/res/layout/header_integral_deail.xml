<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="218px"
       android:layout_marginBottom="10px"
       android:background="@color/white"
       android:orientation="horizontal"
       android:gravity="center_vertical">
       <com.commsdk.common.widget.CircleImageView
           android:id="@+id/img_integral_detail_logo"
           android:layout_width="92px"
           android:layout_height="92px"
           android:layout_marginLeft="24px"
           android:src="@mipmap/myself_head_portrait"/>

       <TextView
           android:id="@+id/tv_integral_detail_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="25px"
           android:textSize="15sp"
           android:textColor="@color/corlor_666"
           android:text="平台积分"/>

       <TextView
           android:id="@+id/tv_integral_detail_sum"
           android:layout_width="match_parent"
           android:layout_weight="1.0"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10px"
           android:textSize="24sp"
           android:textColor="#ffaa76"
           android:text="1000"/>

       <TextView
           android:id="@+id/tv_integral_detail_exchange"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="30px"
           android:textSize="14sp"
           android:textColor="#0196ff"
           android:text="去兑换 >"/>
   </LinearLayout>

</LinearLayout>
