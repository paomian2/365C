<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_search_goods"
            android:layout_width="118px"
            android:layout_height="118px"
            android:src="@mipmap/img_def"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20px"
            android:layout_marginLeft="32px"
            android:layout_marginBottom="20px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_search_goodsname"
                android:text="商品名称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="26px"
                android:textColor="@color/corlor_666"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_search_goodprice"
                android:text="商品价格"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:textSize="26px"
                android:textColor="@color/tv_red"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/viewLine"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_back"
        android:layout_marginLeft="20px"/>

</LinearLayout>
