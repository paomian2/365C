<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_classification_twolevelname"
            android:text="二级分类名称"
            android:layout_marginLeft="20px"
            android:textSize="@dimen/font_common_size_small"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_classification_twolevelmore"
            android:textSize="@dimen/font_common_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:text="全部  >"/>
    </LinearLayout>
    <com.a365vintagewine.widget.NoScrollGridView
        android:id="@+id/gv_classification_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:stretchMode="columnWidth"/>
    <RelativeLayout
        android:id="@+id/rl_classification_showbrand"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:layout_height="60px">
        <ImageView
            android:id="@+id/img_classification_showbrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/arrow_dowm"
            />
    </RelativeLayout>
</LinearLayout>
