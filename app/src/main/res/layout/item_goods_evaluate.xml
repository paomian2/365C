<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20px"
    android:paddingRight="30px"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.commsdk.common.widget.CircleImageView
            android:id="@+id/img_goods_evaluate_head"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@mipmap/myself_head_portrait"/>
        <TextView
            android:id="@+id/tv_goods_evaluate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1.0"
            android:textColor="@color/corlor_666"
            android:textSize="26px"
            android:text="ergou"/>

        <TextView
            android:id="@+id/tv_goods_evaluate_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_integral"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/praise"
            android:drawablePadding="20px"
            android:textSize="28px"
            android:text="好评"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_goods_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="26px"/>

    <TextView
        android:id="@+id/tv_goods_evaluate_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20px"
        android:textColor="@color/corlor_666"
        />

</LinearLayout>
