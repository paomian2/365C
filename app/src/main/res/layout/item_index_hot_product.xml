<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="340px">
        <ImageView
            android:id="@+id/imgGoods"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/img_def"
            android:layout_width="205px"
            android:layout_height="205px"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_marginTop="30px"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="24px"
            android:text="商品介绍商品介绍商品介绍"
            android:layout_alignLeft="@+id/imgGoods"
            android:layout_alignRight="@+id/imgGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgGoods" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_alignLeft="@+id/imgGoods"
            android:layout_marginTop="28px"
            android:layout_below="@+id/tvGoodsName"
            android:layout_width="315px"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvGoodsPrice"
                android:textColor="#1a191e"
                android:textSize="36px"
                android:text="¥139"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
