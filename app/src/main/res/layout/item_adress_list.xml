<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:paddingLeft="38px"
        android:paddingRight="38px"
        android:paddingTop="55px"
        android:layout_width="match_parent"
        android:layout_height="210px">
        <TextView
            android:singleLine="true"
            android:maxLength="20"
            android:textColor="#333333"
            android:textSize="28px"
            android:id="@+id/tvAdress"
            android:text="北京市通州区科创六街"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvConsignee"
            android:layout_below="@+id/tvAdress"
            android:layout_marginTop="38px"
            android:text="王小明    18778048491"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="center"
            android:src="@mipmap/icon_adress_edit"
            android:layout_centerInParent="true"
            android:layout_width="98px"
            android:layout_height="98px"
            android:id="@+id/imgEdit"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
