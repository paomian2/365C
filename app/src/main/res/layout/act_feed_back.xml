<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <include layout="@layout/layout_text_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_feedback_msg"
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:paddingLeft="30px"
            android:paddingTop="20px"
            android:maxLength="200"
            android:hint="请在这里填写您的意见，您的意见对我们很重要，我们一定会认真考虑！"
            android:gravity="start"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_feedback_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_marginBottom="22px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="0/200字"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    
    <EditText
        android:id="@+id/et_feedback_phone"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginTop="10px"
        android:paddingLeft="30px"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:hint="请输入您的手机号码或邮箱（选填）"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164px"
        android:layout_weight="1.0"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_feedback_one"
            android:layout_width="164px"
            android:layout_height="164px"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_photo"/>

        <ImageView
            android:id="@+id/img_feedback_two"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginLeft="20px"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_photo"/>

        <ImageView
            android:id="@+id/img_feedback_there"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginLeft="20px"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_photo"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_feedback_commit"
        style="@style/btn_login_register"
        android:layout_marginBottom="56px"
        android:text="提 交"
        />

</LinearLayout>
