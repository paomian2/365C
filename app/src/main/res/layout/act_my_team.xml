<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <include layout="@layout/layout_text_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_myteam_accumulated_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_myteam_accumulated_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="90px"
                android:textSize="60px"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="¥3333"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:textSize="28px"
                android:textColor="@color/corlor_666"
                android:text="累计收益"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="30px"
                    android:textColor="@color/black"
                    android:text="¥3333"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:textSize="28px"
                    android:textColor="@color/corlor_666"
                    android:text="预计收益"/>
            </LinearLayout>
            <TextView
                android:layout_width="1px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:background="@color/line_back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="30px"
                    android:textColor="@color/black"
                    android:text="¥3333"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:textSize="28px"
                    android:textColor="@color/corlor_666"
                    android:text="今日收益"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="20px"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_my_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_marginTop="36px"
            >
            <TextView
                android:id="@+id/tv_my_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30px"
                android:textColor="@color/tv_red"
                android:text="我的团队"/>
            <TextView
                android:id="@+id/tv_my_team_line"
                android:layout_width="150px"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:background="@color/tv_red"
                android:layout_marginTop="20px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ranking_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_marginTop="36px">
            <TextView
                android:id="@+id/tv_ranking_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30px"
                android:textColor="@color/corlor_666"
                android:text="排名榜"/>
            <TextView
                android:id="@+id/tv_ranking_list_line"
                android:layout_width="150px"
                android:layout_height="2px"
                android:background="@color/red"
                android:layout_marginTop="20px"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_back"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>
