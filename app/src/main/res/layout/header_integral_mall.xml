<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_integral_mall_advertisement"
        android:layout_width="match_parent"
        android:layout_height="305px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172px"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_integral_mall_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/img_integral"
                    android:layout_width="46px"
                    android:layout_height="62px"
                    android:src="@mipmap/integral"
                    android:layout_marginTop="32px"/>
                <TextView
                    android:id="@+id/tv_integral_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_integral"
                    android:layout_alignBottom="@+id/img_integral"
                    android:layout_marginLeft="20px"
                    android:text="8000"
                    android:textColor="#0196ff"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="积分"
                android:textColor="@color/corlor_666"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="72px"
            android:background="@color/line_back"
            android:layout_marginTop="70px"/>

        <LinearLayout
            android:id="@+id/ll_integral_mall_exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/img_exchange_record"
                    android:layout_width="46px"
                    android:layout_height="62px"
                    android:src="@mipmap/exchange_record"
                    android:layout_marginTop="40px"/>
                <TextView
                    android:id="@+id/tv_exchange_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_exchange_record"
                    android:layout_alignBottom="@+id/img_exchange_record"
                    android:layout_marginLeft="20px"
                    android:text="5"
                    android:textColor="#ffaa76"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="兑换记录"
                android:textColor="@color/corlor_666"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_integral_mall_shopname"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:gravity="center"
        android:text="365平台"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="10px"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/tv_integral_mall_sort_salenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/integral_sort_dowm"
                android:drawablePadding="10px"
                android:layout_centerInParent="true"
                android:text="销量"
                android:textSize="14sp"
                android:textColor="#0196ff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/tv_integral_mall_sort_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/integral_sort_dowm"
                android:drawablePadding="10px"
                android:text="积分"
                android:textSize="14sp"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_back"/>

</LinearLayout>
