<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="wrap_content">

    
   <LinearLayout
       android:background="@drawable/rec_diaolog_notice_bg"
       android:layout_centerInParent="true"
       android:layout_width="270dp"
       android:layout_height="106dp"
       android:orientation="vertical">
       <TextView
           android:id="@+id/tv_notice"
           android:textSize="@dimen/font_common_size_medium"
           android:gravity="center"
           android:text="提示信息"
           android:layout_width="match_parent"
           android:layout_height="59dp" />
       <View
           android:background="@color/page_bg"
           android:layout_width="match_parent"
           android:layout_height="1px"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_left"
               android:gravity="center"
               android:text="否"
               android:background="@drawable/rec_diaolog_notice_bg_left"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/tv_right"
               android:text="是"
               android:gravity="center"
               android:textColor="@color/white"
               android:background="@drawable/rec_diaolog_notice_bg_right"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent" />
       </LinearLayout>
   </LinearLayout>


</RelativeLayout>
