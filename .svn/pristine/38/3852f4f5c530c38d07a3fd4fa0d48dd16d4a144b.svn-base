<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px">
        <com.commsdk.common.widget.CircleImageView
            android:id="@+id/headImg"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="36px"
            android:layout_marginTop="43px"
            android:src="@mipmap/myself_head_portrait" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="48px"
            android:layout_toRightOf="@+id/headImg"
            android:text="樱桃小丸子"
            android:textColor="@color/tv_hint"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tvBalanceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:layout_marginLeft="28px"
            android:layout_marginTop="14px"
            android:layout_toRightOf="@+id/headImg"
            android:text="分佣"
            android:textColor="@color/tv_hint"
            android:textSize="22px" />


        <TextView
            android:id="@+id/tvBalancePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="46px"
            android:layout_marginTop="48px"
            android:text="+12"
            android:textColor="@color/black"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvBalancePrice"
            android:layout_marginRight="46px"
            android:layout_marginTop="16px"
            android:text="07-12"
            android:textColor="@color/line_back"
            android:textSize="24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40px"
            android:background="@color/line_back" />
    </RelativeLayout>

</RelativeLayout>

