<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/layout_title_share" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="747px">
                <com.commsdk.common.widget.banner.BanerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_goodsDetail_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="32px"
                    android:layout_marginRight="50px"
                    android:drawableTop="@mipmap/no_collection"
                    android:drawablePadding="16px"
                    android:text="@string/text_collection"/>
            </RelativeLayout>

            <com.a365vintagewine.widget.ImgTextView
                android:id="@+id/tv_goodsDetail_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="78px"
                android:layout_marginTop="46px"
                android:drawablePadding="34px"
                app:mTextContent="sdfasdfdfsdfsdfsdfasf"
                app:mTextDrawble="@mipmap/goods_lable_explosion"
                android:maxLines="2"
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_goodsDetail_sellout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="28px"
                android:layout_marginBottom="32px"
                android:maxLines="2"
                android:textSize="32px"
                android:textColor="@color/tv_red"
                android:text="售罄"
                android:visibility="gone"/>

            <!--正常商品模块：价格、销量、加入购物车-->
            <LinearLayout
                android:id="@+id/ll_goodsDetail_goodsprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="78px"
                android:layout_marginBottom="34px"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57px"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_goodsDetail_goodsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48px"
                        android:textColor="@color/black"
                        android:text="1000"/>
                    <TextView
                        android:id="@+id/tv_goodsDetail_proposal_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginLeft="25px"
                        android:textSize="26px"
                        android:textColor="@color/tab_main_text_1"
                        android:text="1000"/>
                    <LinearLayout
                        android:id="@+id/ll_goodsDetail_jion_shopcart"
                        android:layout_width="193px"
                        android:layout_height="match_parent"
                        android:background="@mipmap/blue_background_fillet">
                        <ImageView
                            android:layout_width="34px"
                            android:layout_height="34px"
                            android:src="@mipmap/shopping_cart"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15px"
                            android:textSize="22px"
                            android:textColor="@color/white"
                            android:text="加入购物车"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月销"
                        android:textSize="22px"
                        android:textColor="@color/tab_main_text_1"/>
                    <TextView
                        android:id="@+id/tv_goodsDetail_monthly_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="1000"
                        android:textSize="22px"
                        android:textColor="@color/tab_main_text_1"/>
                </LinearLayout>
            </LinearLayout>

            <!--积分兑换商品模块-->
            <LinearLayout
                android:id="@+id/ll_goodsDetail_exchange"
                android:layout_width="match_parent"
                android:layout_height="57px"
                android:layout_marginTop="50px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="78px"
                android:layout_marginBottom="64px"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_goodsDetail_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_integral"
                    android:textSize="48px"
                    android:text="288888"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:textColor="@color/tv_integral"
                    android:textSize="36px"
                    android:text="积分"/>
                <LinearLayout
                    android:id="@+id/btn_goodsDetail_exchange"
                    android:layout_width="193px"
                    android:layout_height="match_parent"
                    android:background="@mipmap/blue_background_fillet">
                    <ImageView
                        android:layout_width="23px"
                        android:layout_height="34px"
                        android:src="@mipmap/exchenge_integral"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:textSize="22px"
                        android:textColor="@color/white"
                        android:text="立即兑换"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_back"
                android:layout_marginLeft="50px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:textColor="@color/black"
                android:textSize="28px"
                android:text="产品信息"/>


            <com.a365vintagewine.widget.NoScrollGridView
                android:id="@+id/gv_goodsDetail_goodsinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="58px"
                android:verticalSpacing="18px"
                android:horizontalSpacing="20px"
                android:numColumns="3"/>

            <LinearLayout
                android:id="@+id/ll_goodsDetail_moreinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:layout_marginBottom="50px"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_goodsDetail_moreinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24px"
                    android:textColor="@color/tab_main_text_1"
                    android:text="展开更多"/>

                <ImageView
                    android:id="@+id/img_goodsDetail_morearrow"
                    android:layout_width="19px"
                    android:layout_height="14px"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/arrow_dowm"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@color/background"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_goodsDetail_goodsDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="商品详情"
                    android:textColor="@color/tv_blue_goodsdetail"
                    android:textSize="28px"/>
                <TextView
                    android:id="@+id/tv_goodsDetail_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="商品评价"
                    android:textColor="@color/corlor_666"
                    android:textSize="28px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goodsDetail_join_fragmeng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_goodsDetail_goodscart"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/gray_text">
            <ImageView
                android:id="@+id/img_goodsDetail_goodscart"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/shopping_cart"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_goodsDetail_goodsnum"
                android:layout_width="30px"
                android:layout_height="30px"
                android:background="@mipmap/myself_msg_roundback"
                android:layout_toRightOf="@+id/img_goodsDetail_goodscart"
                android:layout_marginLeft="-20px"
                android:layout_marginTop="15px"
                android:text="16"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:background="@color/black"
            android:paddingLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_goodsDetail_totalprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30px"
                android:text="20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:textSize="20px"
                    android:text="另需配送费¥"/>
                <TextView
                    android:id="@+id/tv_goodsDetail_shippingfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:textSize="20px"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_goodsDetail_settlement"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:background="@color/tv_red"
            android:text="去结算"
            android:textColor="@color/white"
            android:textSize="28px"/>
    </LinearLayout>

</LinearLayout>
