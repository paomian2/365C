<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        layout="@layout/layout_text_title"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="350px">
      <TextView
          android:id="@+id/tvTotalBalance"
          android:textColor="@color/black"
          android:drawablePadding="18px"
          android:drawableLeft="@mipmap/icon_coin"
          android:layout_marginTop="50px"
          android:layout_centerHorizontal="true"
          android:text="¥698.2"
          android:textSize="66px"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/tv_hint"
            android:textSize="26px"
            android:layout_marginTop="30px"
            android:layout_below="@+id/tvTotalBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="总余额"
            />
     <LinearLayout
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="106px"
         android:orientation="horizontal">
         <LinearLayout
             android:id="@+id/layoutBalancePlatform"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/tvBalanceNo_platform"
                 android:layout_gravity="center"
                 android:textColor="@color/balance_select"
                 android:textSize="30px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="¥198.2"/>
             <TextView
                 android:id="@+id/tvBalanceDesc_platform"
                 android:layout_gravity="center"
                 android:layout_marginTop="20px"
                 android:textColor="@color/balance_select"
                 android:textSize="30px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="平台余额"/>
         </LinearLayout>
         <View
             android:layout_gravity="center"
             android:layout_width="1dp"
             android:layout_height="80px"
             android:background="@color/line_back"/>
         <LinearLayout
             android:id="@+id/layoutBalanceRecharge"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/tvBalanceNo_recharge"
                 android:layout_gravity="center"
                 android:textColor="@color/tv_hint"
                 android:textSize="30px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="¥198.2"/>
             <TextView
                 android:id="@+id/tvBalanceDesc_recharge"
                 android:layout_gravity="center"
                 android:layout_marginTop="20px"
                 android:textColor="@color/tv_hint"
                 android:textSize="30px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="平台余额"/>
         </LinearLayout>
     </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="10px"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
