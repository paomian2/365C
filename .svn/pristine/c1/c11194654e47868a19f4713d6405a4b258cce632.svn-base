<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px">
        <ImageView
            android:id="@+id/img_registerback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/goback"
            android:layout_marginLeft="25px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_login_register_title"
        android:text="@string/register"
        />

    <!--注册填写手机验证码、邀请码-->
    <LinearLayout
        android:id="@+id/ll_register_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="44px"
            android:layout_marginRight="30px">
            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/login_phone"
                android:drawablePadding="16px"
                android:inputType="number"
                android:hint="请输入手机号"/>
            <TextView
                android:id="@+id/tv_getVerificationCode"
                android:layout_width="240px"
                android:layout_height="90px"
                android:background="@color/black"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_register_verificationCode"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:layout_marginRight="30px"
            android:drawableLeft="@mipmap/register_verification_code"
            android:drawablePadding="16px"
            android:inputType="number"
            android:hint="请输入验证码"/>

        <EditText
            android:id="@+id/et_register_invitationCode"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:layout_marginRight="30px"
            android:drawableLeft="@mipmap/register_invitation_code"
            android:drawablePadding="16px"
            android:hint="邀请码（选填）"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10px"
            android:layout_marginLeft="33px">
            <CheckBox
                android:id="@+id/checkbox_useragreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="我同意"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/useragreement"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register_next"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="50px"
            android:background="@color/line_back"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <!--注册填写登录密码-->
    <LinearLayout
        android:id="@+id/ll_register_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="44px"
            android:layout_marginRight="30px">
            <EditText
                android:id="@+id/et_register_passwprd"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/login_phone"
                android:drawablePadding="16px"
                android:maxLength="18"
                android:inputType="number"
                android:hint="请设置登录密码"/>
            <ImageView
                android:id="@+id/img_register_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/eye_noshow"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register_complete"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="140px"
            android:background="@color/line_back"
            android:text="完  成"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
