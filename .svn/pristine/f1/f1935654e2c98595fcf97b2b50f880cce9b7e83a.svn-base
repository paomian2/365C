<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="45px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_dialog_goods"
            android:layout_width="200px"
            android:layout_height="200px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22px"
            android:layout_marginTop="7px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dialog_goods_goodsname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24px"
                android:lines="2"/>
            <TextView
                android:id="@+id/tv_dialog_goods_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:textColor="@color/corlor_666"
                android:textSize="24px"/>
            <TextView
                android:id="@+id/tv_dialog_goods_bazaarprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:textColor="@color/gray_text"
                android:textSize="24px"/>
            <TextView
                android:id="@+id/tv_dialog_goods_wholesaleprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:textColor="@color/black"
                android:textSize="24px"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_text"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginLeft="20px"
        android:layout_marginBottom="50px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="购买数量"/>
        <TextView
            android:id="@+id/cart_goods_subtract"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="200px"
            android:gravity="center"
            android:background="@drawable/cart_jian"
            />

        <TextView
            android:id="@+id/cart_goods_num"
            android:layout_width="100px"
            android:layout_height="68px"
            android:layout_below="@+id/cart_goods_name"
            android:background="@drawable/cart_num"
            android:gravity="center"
            android:text="1"
            />

        <TextView
            android:id="@+id/cart_goods_add"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_below="@id/cart_goods_name"
            android:gravity="center"
            android:background="@drawable/cart_add"
            />
        <TextView
            android:id="@+id/tv_dialog_buyunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:text="箱"/>
[
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_confrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:textSize="40px"
        android:textColor="@color/white"
        android:text="确   定"/>

</LinearLayout>
