<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:padding="20px"
            android:layout_weight="1"
            android:layout_width="400px"
            android:layout_height="wrap_content">
            <com.commsdk.common.widget.CircleImageView
                android:id="@+id/lvHeadImg"
                android:layout_width="90px"
                android:src="@drawable/milk_img_def"
                android:layout_height="90px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />
            <TextView
                android:maxLength="15"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tvUserName"
                android:textColor="@color/black"
                android:textSize="@dimen/font_common_size_small"
                android:text="为什么名字还可以长"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/tvUserDesc" />
            <TextView
                android:id="@+id/tvUserDesc"
                android:layout_marginTop="5px"
                android:text="青年评论家，学者，华文世界注明的人文经典读者。"
                android:layout_marginLeft="20px"
                android:layout_below="@+id/tvUserName"
                android:layout_toRightOf="@+id/lvHeadImg"
                android:textSize="@dimen/font_common_size_small"
                android:textColor="@color/tv_hint"
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view"
                android:layout_marginTop="25px"
                android:layout_below="@+id/lvHeadImg"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/page_bg"/>

            <TextView
                android:layout_marginTop="30px"
                android:id="@+id/tvGoodsName"
                android:layout_below="@+id/view"
                android:text="椰香奶茶"
                android:textColor="@color/black"
                android:textSize="@dimen/font_common_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:textSize="@dimen/font_common_size_small"
                android:text="香港的奶茶又称为“丝袜奶茶”，于中国大陆多称为“港式奶茶”，以红茶混和浓鲜奶加糖制成，下奶及糖较多，杯的体积较大，热饮或冻饮均可，但冻饮一般加两元"
                android:layout_marginTop="15px"
                android:layout_below="@+id/tvGoodsName"
                android:textColor="@color/tv_hint"
                android:maxLines="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="2"
            android:src="@drawable/milk_img_def"
            android:id="@+id/ivGoods"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="200px"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>