<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a365vintagewine.mvp.activity.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_back"
        android:layout_above="@+id/ll_home"/>

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_home_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_home_home"
                android:layout_width="38px"
                android:layout_height="72px"
                android:src="@mipmap/home_show"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_home_classification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_home_classification"
                android:layout_width="38px"
                android:layout_height="72px"
                android:src="@mipmap/classification_hide"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_home_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_home_order"
                android:layout_width="38px"
                android:layout_height="72px"
                android:src="@mipmap/order_hide"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_home_myself"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_home_myself"
                android:layout_width="38px"
                android:layout_height="72px"
                android:src="@mipmap/myself_hide"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
