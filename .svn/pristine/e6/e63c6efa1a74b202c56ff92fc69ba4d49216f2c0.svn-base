<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="658px"
            android:layout_height="816px"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pw_background_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.commsdk.common.widget.CircleImageView
                    android:id="@+id/img_my_head"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/myself_head_portrait"/>
                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42px"
                    android:layout_marginLeft="30px"
                    android:text="wowo"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_my_QR_code"
                android:layout_width="506px"
                android:layout_height="506px"
                android:layout_marginTop="44px"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的邀请码："
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_my_invitation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="lsdnfoasnfasdf"
                    android:textSize="15sp"
                    android:textColor="#e73d3f"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_canclePw"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="76px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/canclepw"/>
    </LinearLayout>

</RelativeLayout>
