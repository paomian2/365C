<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218px"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="61px"
            android:layout_height="82px"
            android:src="@mipmap/my_sum_integral"
            android:layout_marginTop="32px"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_my_integral_sum"
                android:layout_alignBottom="@+id/tv_my_integral_sum"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="总积分"/>
            <TextView
                android:id="@+id/tv_my_integral_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="2000"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_platform_integral"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.commsdk.common.widget.CircleImageView
            android:id="@+id/img_platform_ingegral"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="平台积分"
            android:textSize="15sp"
            android:textColor="@color/corlor_666"/>
        <TextView
            android:id="@+id/tv_platform_sum_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:drawablePadding="15px"
            android:layout_marginRight="30px"
            android:text="1000"
            android:textSize="15sp"
            android:textColor="@color/corlor_666"/>
    </LinearLayout>
</LinearLayout>
