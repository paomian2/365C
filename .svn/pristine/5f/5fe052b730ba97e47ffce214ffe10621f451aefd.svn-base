<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/titlebackground"
        android:id="@+id/ll_text_title">

        <RelativeLayout
            android:id="@+id/img_text_title_back"
            android:layout_width="100px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:src="@mipmap/goback"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的钱包"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_my_wallet_payment_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="支付密码"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="412px"
        android:background="#38383b"
        android:orientation="vertical">
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30px"-->
            <!--android:layout_marginRight="20px"-->
            <!--android:gravity="right"-->
            <!--android:text="余额明细 >"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="12sp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74px"
            android:layout_marginTop="96px"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="74px"
                android:layout_height="74px"
                android:src="@mipmap/my_wallet_money"
                />
            <TextView
                android:id="@+id/tv_my_wallet_summoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="18px"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="¥ 123.0"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="总余额"/>

        <Button
            android:id="@+id/btn_my_wallet_reflect"
            android:layout_width="218px"
            android:layout_height="70px"
            android:layout_marginTop="60px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_background_black"
            android:text="提  现"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="228px"
        android:layout_marginTop="10px"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_my_wallet_integral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1.0">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_my_wallet_sumintegral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:text="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="积分"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_wallet_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:gravity="right"
                android:text="去兑换"
                android:textColor="#0196ff"
                android:textSize="12sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_my_wallet_Myvoucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@color/white"
            android:layout_weight="1.0">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_my_wallet_sumCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:text="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="优惠券"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_my_wallet_myIDcrad"
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:layout_marginTop="20px"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/my_wallet_myidcard"
                android:drawablePadding="20px"
                android:gravity="center_vertical"
                android:text="我的银行卡"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="14px"
                android:layout_height="26px"
                android:src="@mipmap/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_back"/>
    </LinearLayout>

</LinearLayout>
