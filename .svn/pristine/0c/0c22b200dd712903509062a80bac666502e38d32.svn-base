<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="38px"
        android:layout_marginRight="37px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_order_list_shopname"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="365"/>
        <TextView
            android:id="@+id/tv_order_list_orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="365"/>
        <TextView
            android:id="@+id/tv_order_list_orderCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="365"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/line_back"/>

    <LinearLayout
        android:id="@+id/ll_order_list_goods1"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_order_list_goodsImg1"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginTop="32px"
            android:layout_marginLeft="42px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="164px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="38px"
            android:layout_marginRight="40px">
            <TextView
                android:id="@+id/tv_order_list_goodsname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:text="茅台"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_order_list_goodsprice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:textColor="@color/black"
                    android:text="¥1000"/>
                <TextView
                    android:id="@+id/tv_order_list_goodsdnum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="28px"
                    android:text="X  3"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_order_list_goods2"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_order_list_goodsImg2"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginTop="32px"
            android:layout_marginLeft="42px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="164px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="38px"
            android:layout_marginRight="40px">
            <TextView
                android:id="@+id/tv_order_list_goodsname2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_order_list_goodsprice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_order_list_goodsdnum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="28px"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/line_back"/>

    <TextView
        android:id="@+id/tv_order_list_seeMoreGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:gravity="right"
        android:layout_marginRight="36px"
        android:textSize="30px"
        android:textColor="@color/tv_red"
        android:text="查看剩余2个商品  >"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginRight="36px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_order_list_orderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_marginBottom="40px"
            android:gravity="right"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="共2件商品，实付6000积分"
            />
        <LinearLayout
            android:id="@+id/ll_order_list_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="right">
            <Button
                android:id="@+id/btn_order_list_ordercancle"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="取消订单"
                android:textColor="@color/black"
                android:textSize="30px"/>

            <Button
                android:id="@+id/btn_order_list_payment"
                android:layout_width="160px"
                android:layout_height="58px"
                android:layout_marginLeft="30px"
                android:background="@drawable/btn_background_black"
                android:text="付 款"
                android:textColor="@color/white"
                android:textSize="30px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order_list_Shipment_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_order_list_reminder"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="催  单"
                android:textColor="@color/black"
                android:textSize="30px"/>
            <Button
                android:id="@+id/btn_order_list_Shipment_pending_cancle"
                android:layout_width="160px"
                android:layout_height="58px"
                android:layout_marginLeft="30px"
                android:background="@drawable/pw_background_white"
                android:text="取消订单"
                android:textColor="@color/black"
                android:textSize="30px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order_list_Shipped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_order_list_see_logistics"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="查看物流"
                android:textColor="@color/black"
                android:textSize="30px"/>
            <Button
                android:layout_marginLeft="30px"
                android:id="@+id/btn_order_list_confirmreceipt"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="确认收货"
                android:textColor="@color/black"
                android:textSize="30px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order_list_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_order_list_cancle_refund"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="取消退款"
                android:textColor="@color/black"
                android:textSize="30px"/>
            <Button
                android:id="@+id/btn_order_list_refund_detail"
                android:layout_width="160px"
                android:layout_height="58px"
                android:layout_marginLeft="30px"
                android:background="@drawable/pw_background_white"
                android:text="退款详情"
                android:textColor="@color/black"
                android:textSize="30px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order_list_Pending_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_order_list_evaluate"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="评  价"
                android:textColor="@color/black"
                android:textSize="30px"/>
            <Button
                android:id="@+id/btn_order_list_again_single1"
                android:layout_width="160px"
                android:layout_height="58px"
                android:layout_marginLeft="30px"
                android:background="@drawable/pw_background_white"
                android:text="再来一单"
                android:textColor="@color/black"
                android:textSize="30px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_list_again_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_order_list_again_single"
                android:layout_width="160px"
                android:layout_height="58px"
                android:background="@drawable/pw_background_white"
                android:text="再来一单"
                android:textColor="@color/black"
                android:textSize="30px" />
        </LinearLayout>
     </LinearLayout>
</LinearLayout>
