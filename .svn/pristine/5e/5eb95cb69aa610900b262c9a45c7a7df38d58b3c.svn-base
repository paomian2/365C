<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="原  密  码："
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_settinglogin_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="请输入您的原密码"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="@color/line_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="新  密  码："
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_settinglogin_newdpassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="请输入6-16位字母或数字"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="@color/line_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="确认密码："
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_settinglogin_newdpassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入6-16位字母或数字"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="@color/line_back"/>

    <TextView
        android:id="@+id/tv_settinglogin_forgetpassword"
        style="@style/forget_text"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:text="忘记密码？"/>

    <Button
        android:id="@+id/btn_setting_complete"
        style="@style/btn_login_register"
        android:layout_marginTop="110px"
        android:text="完 成"/>

</LinearLayout>
