<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_empty"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--同意退款dialog-->
    <LinearLayout
        android:background="@drawable/rec_diaolog_notice_bg"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_notice"
            android:textSize="@dimen/font_common_size_medium"
            android:gravity="center"
            android:text="同意退款"
            android:layout_width="match_parent"
            android:layout_height="59dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp">
            <EditText
                android:numeric="decimal"
                android:textSize="@dimen/font_common_size_medium"
                android:focusableInTouchMode="true"
                android:id="@+id/edit_money"
                android:layout_centerInParent="true"
                android:hint="请输入退款金额"
                android:background="@color/white"
                android:layout_width="195dp"
                android:layout_height="45dp" />
            <View
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/edit_money"
                android:background="#CBCBCB"
                android:layout_width="195dp"
                android:layout_height="1px"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/page_bg"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_left"
                android:gravity="center"
                android:text="否"
                android:background="@drawable/rec_diaolog_notice_bg_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_right"
                android:text="是"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rec_diaolog_notice_bg_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
