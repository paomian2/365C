<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45px" />
    <include layout="@layout/layout_msg_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_orderList_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/black"
            android:textSize="30px"/>
        <TextView
            android:id="@+id/tv_orderList_pending_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/black"
            android:textSize="30px"/>
        <TextView
            android:id="@+id/tv_orderList_goodsreceipt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@color/black"
            android:textSize="30px"/>
        <TextView
            android:id="@+id/tv_orderList_evaluate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="待评价"
            android:textColor="@color/black"
            android:textSize="30px"/>
        <TextView
            android:id="@+id/tv_orderList_refund"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="退款"
            android:textColor="@color/black"
            android:textSize="30px"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_orderList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
